@model AppStudentOfFaculty.Dto.User.LoginDto

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-5 col-md-6">
        </div>
        <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
            <div class="card card-plain mt-8">
                <div class="card-header pb-0 text-left bg-transparent">
                    <h3 class="font-weight-bolder text-info text-gradient">Welcome Hung Quang Bao</h3>
                    <p class="mb-0">Enter your email and password to sign in</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @class = "" }))
                    {
                        @if (ViewData["MessageLogin"] != null)
                        {
                            <p class="text-danger text-center">
                                @ViewData["MessageLogin"]
                            </p>
                        }
                        <div class="mb-4">
                            <label for="username" class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class="form-control", @id="email" } )
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            @Html.PasswordFor(m => m.Password, new {@class="form-control", @id="password"} )
                        </div>
                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Login</button>
                    }
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5 col-md-6">
        </div>
    </div>
</div>
